<div class="form-header">
    <h2>Enter your info</h2>
</div>
  <form method="post" action="/contact" novalidate>

    <div class="form-field">
      <label for="first-name">First Name</label>
      <input class="input" id="first-name" name="first-name" type="text"></input>
    </div>

    <div class="form-field">
      <label for="last-name">Last Name</label>
      <input class="input" id="last-name" name="last-name" type="text"></input>
    </div>

    <div class="form-actions">
      <button class="btn" type="submit">Send</button>
    </div>

  </form>

  <form method="post" action="http://localhost:3000/contact" enctype="multipart/form-data">
    <div>
      <label for="file">Choose a file</label>
      <input type="file" id="file" name="myFile">
    </div>
    <div>
      <button>Send the file</button>
    </div>
  </form>